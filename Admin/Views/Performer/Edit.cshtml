@model Admin.Models.PerformerViewModels.PerformerEditViewModel
@{
    ViewBag.Title = "Oyuncu Düzenle";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Edit", "Performer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.PerformerId)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.CreationDate)
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", id = "title" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.LastName)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Information)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Information, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Information, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Birthdate)
            </div>
            <div class="col-md-10">
                <input id="birthdate" asp-for="Birthdate" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Slug)
            </div>
            <div class="col-md-10">
                <input asp-for="Slug" readonly="readonly" class="form-control" id="slug" type="text" />
                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Photos)
            </div>
            <div class="col-md-10">
                <div class="input-group mb-3">
                    @Html.EditorFor(model => model.Photos, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.Photos, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                @Html.ActionLink("Geri Dön", "Index", "Performer", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script src="/js/site.js"></script>
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script>
        $("#birthdate").datepicker({
            dateFormat: "d/m/yy"
        });
    </script>
    <script>
        $("form :input").attr("autocomplete", "off");
    </script>
}


